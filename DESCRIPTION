Package: gswdesign
Type: Package
Title: The Gram-Schmidt walk design
Version: 0.1.1
Authors@R: c(
    person("Christopher", "Harshaw", role = "aut"),
    person("Fredrik", "Savje", email = "fredrik.savje@yale.edu", role = c("aut", "cre")),
    person("Daniel", "Spielman", role = "aut"),
